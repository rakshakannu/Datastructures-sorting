import java.Util.Arrays
public class test{
public static void main(String[] args)
{
  int[] arr={5,7,20,10};
  Arrays.sort(arr);
  System.out.println(Arrays.toString(arr)); // increasing order by default
  Arrays.sort(arr,Collections.reverseOrder(arr));
  System.out.println(Arrays.toString(arr));
  Arrays.sort(arr,1,3); // sorting a subarray between 1 and 2(not 3)
}
}
